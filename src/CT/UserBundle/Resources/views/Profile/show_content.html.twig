{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
  <div class="row">
    <div class="col-lg-8 col-md-offset-2">
      <div class="boxed-grey">
    <div class="thumbnail">

      <div class="caption">
        <h3>{{ user.username}}</h3>
      {% autoescape false %}
      <img class="img-thumbnail" src="{{web_image(user.image.getUploadDir ~ '/' ~ user.image.id ~ '.' ~ user.image.url).resize(200,200).jpeg | default('img/profil.jpg')}}" alt="...">
      {% endautoescape %}
        <p>{{user.email }}</p>

        <br>
        <br>

      </div>
    </div>
</div>
</div>
</div>
</div>
