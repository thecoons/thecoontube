{% extends "::layout.html.twig" %}

{% block app_content %}
<!-- Section: contact -->
<section id="contact" class="home-section text-center">
  <div class="heading-contact marginbot-50">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">

          <div class="section-heading">
            <h2>Create Comment</h2>
          </div>

        </div>
      </div>
    </div>
  </div>
  <div class="container">

    <div class="row">
      <div class="col-lg-8 col-md-offset-2">
        <div class="boxed-grey">
          {{ form_start(form,{'attr':{'class':'form-horizontal','id':'contact-form'}})}}
          {{ form_widget(form._token) }}
          <div class="row">
            <div class="col-md-10">
              {{ form_errors(form) }}
              <div class="form-group">
                {{ form_label(form.title,"Comment Title ",{'label_attr':{'class':'control-label'}})}}
                {{ form_errors(form.title)}}
                <div class="input-group">
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-console"></span>
                  </span>
                  {{ form_widget(form.title,{'attr':{'class':'form-control'}})}}
                </div>
              </div>

                <div class="form-group">
                  {{ form_label(form.content,"Comment Content ",{'label_attr':{'class':'control-label'}})}}
                  {{ form_errors(form.content)}}
                  {{ form_widget(form.content,{'attr':{'class':'pull-left ','cols':'80','rows':'6'}})}}

                </div>

                <div class="form-group">
                  {{ form_label(form.note,"Note ",{'label_attr':{'class':'control-label'}})}}
                  {{ form_errors(form.note)}}
                  {{ form_widget(form.note,{'attr':{'class':'pull-left ','cols':'80','rows':'6'}})}}

                </div>



            </div>
            <div class="col-md-12">
              {{form_widget(form.post,{'attr':{'class':'btn btn-skin pull-right'}})}}
            </div>
            {{ form_rest(form) }}

            {{ form_end(form)}}
          </div>
        </div>
      </div>

    </div>

  </div>

</div>
</section>
<!-- /Section: contact -->
{% endblock %}
